<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#800a6ba3"
    tools:context=".MainActivity"
    android:layout_alignParentEnd="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="126dp"
                android:text="HOME"
                android:textColor="#f4f4f4"
                android:textSize="30sp"
                android:layout_marginRight="126dp"
                android:layout_alignParentRight="true"
                android:fontFamily="monospace"/>

            <ImageButton
                android:id="@+id/home_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="97dp"
                android:layout_marginStart="97dp"
                android:background="#83b3cf"
                android:contentDescription="Profile"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_home" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home_travelerImageIconBTN"
                android:layout_width="109dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/ic_launcher_traveller"/>

            <ImageButton
                android:id="@+id/home_nearbyIconBTN"
                android:layout_width="114dp"
                android:layout_height="89dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                app:srcCompat="@mipmap/ic_launcher_nearby"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home_eventsIconIBtn"
                android:layout_width="109dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_marginLeft="50dp"
                app:srcCompat="@mipmap/ic_launcher_events_log"
                />

            <ImageButton
                android:id="@+id/home_allEventsIconIBtn"
                android:layout_width="114dp"
                android:layout_height="89dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                app:srcCompat="@mipmap/ic_launcher_list" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/main_expence_iconIbtn"
                android:layout_width="109dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_marginLeft="50dp"
                app:srcCompat="@mipmap/ic_launcher_expense"
                />

            <ImageButton
                android:id="@+id/main_expenseTracker_iconIBtn"
                android:layout_width="114dp"
                android:layout_height="89dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                app:srcCompat="@mipmap/ic_launcher_expenselist"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/main_happyMoments_iconIBtn"
                android:layout_width="109dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_marginLeft="50dp"
                app:srcCompat="@mipmap/ic_launcher_teavel_log"
                />

            <ImageButton
                android:id="@+id/main_weather_iconIBtn"
                android:layout_width="114dp"
                android:layout_height="89dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="50dp"
                android:background="#83b3cf"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                app:srcCompat="@mipmap/ic_launcher_weather_status" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>